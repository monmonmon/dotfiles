# consul
if [ -f /usr/bin/consul ]; then
    autoload -U +X bashcompinit && bashcompinit
    complete -o nospace -C /usr/bin/consul consul
fi

peco-src () {
    local repo=$(ghq list | peco --query "$LBUFFER")
    if [ -n "$repo" ]; then
        repo=$(ghq list --full-path --exact $repo)
        BUFFER="cd ${repo}"
        zle accept-line
    fi
    zle clear-screen
}
zle -N peco-src
bindkey '^]' peco-src
