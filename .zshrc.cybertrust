# consul
if [ -f /usr/bin/consul ]; then
    autoload -U +X bashcompinit && bashcompinit
    complete -o nospace -C /usr/bin/consul consul
fi

peco-src () {
    d=/mnt/hgfs/irodori-pki
    local repo=$(/bin/ls -d $d/*/ | peco --query "$LBUFFER")
    if [ -n "$repo" ]; then
        BUFFER="cd ${repo}"
        zle accept-line
    fi
    zle clear-screen
}
zle -N peco-src
bindkey '^]' peco-src
